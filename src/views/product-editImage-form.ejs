<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + 'editar.name'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Est√°s editando: <i><%= editarImage.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/<%= editarImage.id %>/image/?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="image" class="form-label">Imagen del producto:</label>
						<img src="/images/products/<%= editarImage.image %>" alt="imagen de producto">
						<input type="file" name="image" class="form-input">
					</div>
					
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar Imagen de producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>